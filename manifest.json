{
  "manifest_version": 3,
  "name": "New Tab Note",
  "version": "1.1.2",
  "description": "A rich block-based note editor that replaces your new tab page with AI-powered features",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage", "unlimitedStorage", "offscreen"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
